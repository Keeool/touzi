    <!-- 返回顶部按钮 -->
    <a href="#" class="back-to-top" id="backToTop">
        <i class="fas fa-arrow-up"></i>
    </a>
    
    <script>
        // 侧边栏导航功能
        document.addEventListener('DOMContentLoaded', function() {
            // 获取所有导航链接
            const navLinks = document.querySelectorAll('.nav-links a');
            
            // 为每个导航链接添加点击事件
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // 移除所有active类
                    navLinks.forEach(l => l.classList.remove('active'));
                    
                    // 为当前点击的链接添加active类
                    this.classList.add('active');
                    
                    // 在移动端点击后关闭侧边栏
                    if (window.innerWidth <= 1024) {
                        document.getElementById('sidebar').classList.remove('active');
                    }
                });
            });
            
            // 侧边栏切换按钮（移动端）
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                });
            }
            
            // 返回顶部按钮
            const backToTop = document.getElementById('backToTop');
            
            window.addEventListener('scroll', function() {
                // 显示/隐藏返回顶部按钮
                if (window.pageYOffset > 300) {
                    backToTop.classList.add('show');
                } else {
                    backToTop.classList.remove('show');
                }
                
                // 更新阅读进度
                updateReadingProgress();
                
                // 高亮当前阅读章节
                highlightCurrentChapter();
            });
            
            // 资产配置计算器
            const calculateBtn = document.getElementById('calculateBtn');
            const riskLevel = document.getElementById('riskLevel');
            const investmentAmount = document.getElementById('investmentAmount');
            const resultContainer = document.getElementById('resultContainer');
            const resultContent = document.getElementById('resultContent');
            const resultChart = document.getElementById('resultChart');
            
            // 配置方案数据
            const allocationPlans = {
                conservative: {
                    name: "保守型",
                    description: "适合极度风险厌恶者，主要目标是保本",
                    allocations: [
                        { name: "货币基金", percentage: 40, color: "#4CAF50" },
                        { name: "债券基金", percentage: 40, color: "#2196F3" },
                        { name: "宽基指数基金", percentage: 20, color: "#9C27B0" }
                    ],
                    expectedReturn: "3%-5%"
                },
                moderate: {
                    name: "稳健型",
                    description: "适合能接受小幅波动的投资者",
                    allocations: [
                        { name: "债券基金", percentage: 50, color: "#2196F3" },
                        { name: "指数基金", percentage: 30, color: "#9C27B0" },
                        { name: "优质股票/股票基金", percentage: 20, color: "#FF9800" }
                    ],
                    expectedReturn: "5%-8%"
                },
                balanced: {
                    name: "平衡型",
                    description: "适合能承受中等波动的投资者",
                    allocations: [
                        { name: "指数基金", percentage: 40, color: "#9C27B0" },
                        { name: "优质股票", percentage: 30, color: "#FF9800" },
                        { name: "债券基金", percentage: 20, color: "#2196F3" },
                        { name: "行业基金", percentage: 10, color: "#F44336" }
                    ],
                    expectedReturn: "8%-12%"
                },
                aggressive: {
                    name: "进取型",
                    description: "适合追求高收益，能承受大波动的投资者",
                    allocations: [
                        { name: "优质股票", percentage: 50, color: "#FF9800" },
                        { name: "成长型基金", percentage: 30, color: "#F44336" },
                        { name: "指数基金", percentage: 10, color: "#9C27B0" },
                        { name: "债券基金", percentage: 10, color: "#2196F3" }
                    ],
                    expectedReturn: "12%以上"
                }
            };
            
            calculateBtn.addEventListener('click', function() {
                const plan = allocationPlans[riskLevel.value];
                const amount = parseFloat(investmentAmount.value) || 10000;
                
                // 生成结果内容
                let html = `<h5>${plan.name}配置方案</h5>`;
                html += `<p>${plan.description}</p>`;
                html += `<p><strong>预期年化收益：${plan.expectedReturn}</strong></p>`;
                html += `<ul>`;
                
                plan.allocations.forEach(item => {
                    const itemAmount = (amount * item.percentage / 100).toFixed(2);
                    html += `<li><strong>${item.name} (${item.percentage}%)</strong>: ¥${itemAmount}</li>`;
                });
                
                html += `</ul>`;
                html += `<p><strong>总投资金额：¥${amount.toFixed(2)}</strong></p>`;
                
                resultContent.innerHTML = html;
                
                // 生成图表
                resultChart.innerHTML = '';
                plan.allocations.forEach(item => {
                    const barHeight = item.percentage * 1.5;
                    const bar = document.createElement('div');
                    bar.style.cssText = `
                        width: 60px;
                        height: ${barHeight}px;
                        background-color: ${item.color};
                        border-radius: 4px 4px 0 0;
                        display: flex;
                        flex-direction: column;
                        justify-content: flex-end;
                        align-items: center;
                        padding-bottom: 5px;
                        color: white;
                        font-weight: bold;
                    `;
                    bar.innerHTML = `<div>${item.percentage}%</div>`;
                    
                    const label = document.createElement('div');
                    label.style.cssText = `
                        margin-top: 5px;
                        font-size: 12px;
                        text-align: center;
                        width: 60px;
                        overflow: hidden;
                    `;
                    label.textContent = item.name;
                    
                    const column = document.createElement('div');
                    column.style.cssText = `
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                    `;
                    
                    column.appendChild(bar);
                    column.appendChild(label);
                    resultChart.appendChild(column);
                });
                
                // 显示结果
                resultContainer.style.display = 'block';
                
                // 滚动到结果
                resultContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            });
            
            // 初始化计算器
            calculateBtn.click();
            
            // 更新阅读进度
            function updateReadingProgress() {
                const chapters = document.querySelectorAll('.chapter');
                const totalHeight = document.documentElement.scrollHeight - window.innerHeight;
                const scrolled = window.pageYOffset;
                const progress = (scrolled / totalHeight) * 100;
                
                // 更新进度条
                document.getElementById('readingProgress').style.width = progress + '%';
                document.getElementById('sidebarProgress').style.width = progress + '%';
                document.getElementById('progressPercent').textContent = Math.min(100, Math.round(progress)) + '%';
            }
            
            // 高亮当前阅读章节
            function highlightCurrentChapter() {
                const chapters = document.querySelectorAll('.chapter');
                const navLinks = document.querySelectorAll('.nav-links a');
                
                let currentChapterId = '';
                
                chapters.forEach(chapter => {
                    const chapterTop = chapter.offsetTop - 100;
                    const chapterBottom = chapterTop + chapter.offsetHeight;
                    
                    if (window.pageYOffset >= chapterTop && window.pageYOffset < chapterBottom) {
                        currentChapterId = chapter.id;
                    }
                });
                
                // 更新导航栏高亮
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === '#' + currentChapterId) {
                        link.classList.add('active');
                    }
                });
            }
            
            // 点击页面任意位置关闭移动端侧边栏
            document.addEventListener('click', function(e) {
                if (window.innerWidth <= 1024 && 
                    !sidebar.contains(e.target) && 
                    e.target !== sidebarToggle && 
                    !sidebarToggle.contains(e.target)) {
                    sidebar.classList.remove('active');
                }
            });
            
            // 初始化阅读进度
            updateReadingProgress();
        });
    </script>
</body>
</html>
